manifest {
    mainScript = 'main.nf'
}

// default parameters
params {
    output = 'results'
    cores = "4"
    memory = "8"

    profile = false
    help = false

    // input
    reads = ''
    species = 'eco'
    dge = ''
    index = ''
  
    // parameters
    strand = '0'
    mode = 'single'
    tpm = 1
  
    // folder structure
    output = 'results'
    scripts_dir = 'scripts'
    fastp_dir = '01-Trimming/fastp'
    sortmerna_dir = '02-Sortmerna'
    hisat2_dir = '03-Mapping/hisat2'
    featurecounts_dir = '04-Counting/featurecounts'
    tpm_filter_dir = '05-CountingFilter/TPM'
    annotation_dir = '06-Annotation'
    deseq2_dir = '07-DifferentialExpression/deseq2'
    multiqc_dir = 'Summary'

    // optional profile configurations, mainly necessary for HPC executions
    workdir = "/tmp/nextflow-work-$USER"
    cloudDatabase = false
    cachedir = false
}

profiles {

    standard {
        params.cloudProcess = false
        params.cloudDatabase = false
        includeConfig 'configs/conda.config' }

    slurm {
        params.cloudProcess = true
      	params.workdir = "/beegfs/rna-hta/wi74fij/work"
  	    params.cloudDatabase = "/beegfs/rna-hta/wi74fij/nextflow-databases/"
        includeConfig 'configs/slurm.config' }

}
