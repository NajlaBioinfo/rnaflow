manifest {
    mainScript = 'main.nf'
}

// default parameters
params {
    output = 'results'
    cores = "4"
    memory = "8"

    profile = false
    help = false

    // input
    reads = ''
    species = 'eco'
    sortmerna_db = ''
    index = ''
  
    // parameters
    strand = '0'
    mode = 'single'
  
    // folder structure
    output = 'results'
    scripts_dir = 'scripts'
    fastp_dir = '01-Trimming/fastp'
    sortmerna_dir = '02-Sortmerna'
    hisat2_dir = '03-Mapping/hisat2'
    featurecounts_dir = '04-Counting/featurecounts'
    annotation_dir = '05-Annotation'
    deseq2_dir = '06-DifferentialExpression/deseq2'
}

profiles {

    standard {
        params.cloudProcess = false
        params.cloudDatabase = false
        process.executor = 'local'
        docker { enabled = false }
    }
}
