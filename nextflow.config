manifest {
    mainScript = 'main.nf'
}

// default parameters
params {
    output = 'results'
    threads = "4"
    mem = "8"
  
    reads = ''
    reference = ''
    annotation = ''
    sortmerna_db = ''
    index = ''
  
    strand = '0'
    mode = 'single'
  
    // folder structure
    output = 'results'
    trimming_dir = '01-Trimming'
    mapping_dir = '02-Mapping'
    counting_dir = '03-Counting'
    diff_dir = '04-Differential_Expression'

    help = false
}

profiles {

    standard {
        process.executor = 'local'
        docker { enabled = false }
    }
}
